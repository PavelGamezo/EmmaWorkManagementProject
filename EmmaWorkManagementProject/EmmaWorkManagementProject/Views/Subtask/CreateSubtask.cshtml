@model SubtaskViewModel

@{
    ViewData["Title"] = "Important";
}

<h4 class="py-10 text-center">Enter task information: </h4>
<form asp-action="CreateSubtask" asp-controller="Subtask" asp-route-UserTaskId="@Model.UserTaskId" class="addForm" method="post">
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Name:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control" type="text">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="Comment"></label>
        <div class="col-sm-8">
            <textarea asp-for="Comment" class="form-control" type="text"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Add subtask" class="btn text-danger submitAddBtn">
    </div>
</form>