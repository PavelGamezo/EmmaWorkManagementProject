@model SubtaskViewModel

<h4 class="py-10 text-center">Edit subtask information: </h4>
<form asp-action="UpdateSubtask" asp-controller="Subtask" asp-route-id="@Model.Id" class="addForm" method="post">
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Name:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control" type="text" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="Comment"></label>
        <div class="col-sm-8">
            <textarea asp-for="Comment" class="form-control" type="text">@Model.Comment</textarea>
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Update" class="btn text-danger submitAddBtn">
    </div>
</form>