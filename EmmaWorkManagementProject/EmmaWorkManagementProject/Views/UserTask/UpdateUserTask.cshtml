@model UserTaskViewModel

<h4 class="py-10 text-center">Enter task information: </h4>
<form asp-action="UpdateUserTask" asp-controller="UserTask" asp-route-id="@Model.Id" class="addForm" method="post">
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Name:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control" type="text" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="Summary"></label>
        <div class="col-sm-8">
            <textarea asp-for="Summary" class="form-control" type="text">@Model.Summary</textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="DateOfCompletion"></label>
        <div class="col-sm-8">
            <input asp-for="DateOfCompletion" class="form-control" type="date" name="dateOfCompletion" id="davaToday" value="@Model.DateOfCompletion">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="Priority"></label>
        <div class="col-sm-8">
            <select name="Priority" class="form-control">
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Update" class="btn text-danger submitAddBtn">
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>
<script>document.getElementById('davaToday').valueAsDate = new Date();</script>